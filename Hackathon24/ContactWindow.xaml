        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="Katowicki Alarm Smogowy" />
            <TextBlock Text="Patryk Białas, kom. 606 73 90 37" />
            <TextBlock>
                e-mail: 
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="mailto://patrykbialas@gmail.com">
                    patrykbialas@gmail.com
                </Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://www.facebook.com/oczystepowietrze/">
                    www.facebook.com/oczystepowietrze/
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
