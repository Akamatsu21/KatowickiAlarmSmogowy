<Window x:Class="Hackathon24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackathon24"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525">
    <Grid>
        <StackPanel x:Name="MainPanel">
            <Image Source="images\katowice.png" Width="500" Height="100"/>
            <Image Source="images\kossutha.png" Width="300" Height="80"/>
            <WrapPanel>
                <Image Source="images\calendar.png" Width="60" Height="60"/>
                <TextBlock Text="{Binding date}" />
                <Image Source="images\clock.png" Width="60" Height="60"/>
                <TextBlock Text="{Binding time}" />
            </WrapPanel>
            <WrapPanel>
                <Image x:Name="StateIcon" Source="{Binding image}" Width="100" />
                <StackPanel>
                    <WrapPanel>
                        <TextBlock x:Name="StateLabel" Text="Stan:" />
                        <TextBlock x:Name="StateContent" Margin="5, 0, 0, 0" Text="{Binding state}" />
                    </WrapPanel>
                    <TextBlock x:Name="UserMessage" Text="{Binding message}" />
                </StackPanel>
            </WrapPanel>
            <WrapPanel>
                <Border CornerRadius="100" BorderBrush="{Binding p25Color}" BorderThickness="3" Width="80" Height="80">
                    <TextBlock Text="{Binding p25Text}" VerticalAlignment="Center" TextAlignment="Center" />
                </Border>
                <Border CornerRadius="100" BorderBrush="{Binding p10Color}" BorderThickness="3" Width="80" Height="80">
                    <TextBlock Text="{Binding p10Text}" VerticalAlignment="Center" TextAlignment="Center" />
                </Border>
                <Border CornerRadius="100" BorderBrush="{Binding so2Color}" BorderThickness="3" Width="80" Height="80">
                    <TextBlock Text="{Binding so2Text}" VerticalAlignment="Center" TextAlignment="Center" />
                </Border>
            </WrapPanel>
            <TextBlock>
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="http://www.polskialarmsmogowy.pl/polski-alarm-smogowy,zdrowie.html">
                    <Image Source="images\heart.png" Width="30" Height="30"/>
                    Wpływ na zdrowie
                </Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="http://www.polskialarmsmogowy.pl/polski-alarm-smogowy,smog.html">
                    <Image Source="images\smog.png" Width="30" Height="30"/>
                    Smog
                </Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="http://www.polskialarmsmogowy.pl/polski-alarm-smogowy,jakwygrac.html">
                    <Image Source="images\cross.png" Width="30" Height="30"/>
                    Walcz ze smogiem
                </Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="http://www.polskialarmsmogowy.pl/polski-alarm-smogowy,kontakt.html">
                    <Image Source="images\phone.png" Width="30" Height="30"/>
                    Kontakt
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
